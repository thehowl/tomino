func (msg {{ $name }}) MarshalBinary() ([]byte, error) {
    return msg.AppendBinary(nil)
}

func (msg {{ $name }}) AppendBinary(b []byte) ([]byte, error) {
    {{ template "encoder" . }}
    return b, nil
}

